<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="500.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.westga.cs1302.weather.view.WeatherCodeBehind">
   <children>
      <HBox fx:id="thePane" prefHeight="27.0" prefWidth="400.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <MenuBar maxWidth="1.7976931348623157E308" prefHeight="25.0" prefWidth="809.0" HBox.hgrow="ALWAYS">
              <menus>
                <Menu text="_File">
                  <items>
                    <MenuItem fx:id="buttonOpenFile" mnemonicParsing="false" onAction="#chooseFile" text="Open">
                           <accelerator>
                              <KeyCodeCombination alt="DOWN" code="O" control="UP" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator></MenuItem>
                        <MenuItem fx:id="buttonExit" mnemonicParsing="false" onAction="#exitTheApplication" text="Exit">
                           <accelerator>
                              <KeyCodeCombination alt="DOWN" code="E" control="UP" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator></MenuItem>
                  </items>
                </Menu>
                <Menu text="_Help">
                  <items>
                    <MenuItem fx:id="buttonAbout" mnemonicParsing="false" onAction="#displayAboutTheApplication" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </children>
      </HBox>
      <HBox layoutY="27.0" prefHeight="466.0" prefWidth="400.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <Label fx:id="labelTheOutput" alignment="TOP_CENTER" lineSpacing="6.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="251.0" prefWidth="400.0" textAlignment="CENTER" wrapText="true" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </children>
</AnchorPane>
